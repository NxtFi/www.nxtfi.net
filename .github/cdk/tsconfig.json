{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "_build/",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules", "_build/"],
}
